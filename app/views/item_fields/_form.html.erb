<%= form_for parent do |f| %>
  <div class="field">
    <%= f.label :field_type %><br>
    <%= f.text_field :field_type %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="row">
    <div class="col-md-2">
      <%= f.fields_for :item_values do |builder| %>
        <%= render 'item_fields/item_value_fields', f: builder %>
      <% end %>
      <%= link_to_add_fields "Add Field", f, :item_values, "item_fields" %>
    </div>
  </div>
  <%= f.submit "Save" %>
<% end %>

<%= form_for parent do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
    <%#= f.select :name, options_for_select(ValueItem.where(kind: obj_to_str(parent)).pluck(:name), parent.name), {:include_blank => true} %>
  </div>
  <div class="row">
    <div class="col-md-2">
      <%= f.fields_for :category_groups do |builder| %>
        <%= render 'item_types/category_group_fields', f: builder %>
      <% end %>
      <%= link_to_add_fields "Add Field", f, :category_groups, "item_types" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <%= f.fields_for :media, @item_type.media.build do |builder| %>
        <%= render 'item_types/medium_fields', f: builder %>
      <% end %>
      <%= link_to_add_fields "Add Field", f, :media, "item_types" %>
    </div>
  </div>
  <%= f.submit "Save" %>
<% end %>
